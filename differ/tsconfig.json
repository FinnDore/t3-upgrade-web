{
  "compilerOptions": {
    "target": "ES2020",
    // "useDefineForClassFields": true,
    "module": "CommonJS",
    "lib": ["dom"],
    "outDir": "dist",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "noEmit": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "baseUrl": "."
    // "paths": {
    //   "@/*": ["./src/*"]
    // }
  },
  "include": ["src/**.ts"],
  "files": ["./src/index.ts"],
  "exclude": ["node_modules"]
}
